DEFAULT(CPACK_PACKAGE_VERSION_MAJOR 4) 
DEFAULT(CPACK_PACKAGE_VERSION_MINOR 0) 
DEFAULT(CPACK_PACKAGE_VERSION_PATCH 0) 
DEFAULT(CPACK_PACKAGE_NAME "Yandex_Server")
DEFAULT(CPACK_PACKAGE_FILE_NAME ${CPACK_PACKAGE_NAME}-${CPACK_PACKAGE_VERSION_MAJOR}.${CPACK_PACKAGE_VERSION_MINOR}.${CPACK_PACKAGE_VERSION_PATCH}-${CMAKE_SYSTEM_NAME}${FREEBSD_VER}${FREEBSD_VER_MINOR}-${HARDWARE_TYPE})

CFLAGS("-DYSVERSION1=${CPACK_PACKAGE_VERSION_MAJOR}")
CFLAGS("-DYSVERSION2=${CPACK_PACKAGE_VERSION_MINOR}")
CFLAGS("-DYSVERSION3=${CPACK_PACKAGE_VERSION_PATCH}")
IF (WIN32)
    CFLAGS("-DYSPACKAGE='${CPACK_PACKAGE_FILE_NAME}'")
ELSE (WIN32)
    CFLAGS("-DYSPACKAGE='\"${CPACK_PACKAGE_FILE_NAME}\"'")
ENDIF (WIN32)

