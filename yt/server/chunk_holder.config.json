{
  Locations : ["node1"],
  Masters: {
     Addresses: ["localhost:8000", "localhost:8001", "localhost:8002"]
  },

  Logging: {
    Writers: [
      {
        Name : "StdErr",
        Type : "StdErr",
        Pattern : "$(datetime) $(level) $(category) $(message)"
      },
      {
        Name : "File",
        Type : "File",
        FileName : "chunk_holder.log",
        Pattern : "$(datetime) $(level) $(category) $(message)"
      }
    ],
    Rules: [
      {
        Categories: [ "*" ], 
        MinLevel : "Info", 
        Writers: [ "StdErr" ] 
      }, 
      { 
        Categories: [ "*" ], 
        MinLevel : "Debug", 
        Writers: [ "File" ] 
      } 
    ]
  }
}
